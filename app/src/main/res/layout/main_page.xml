<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:orientation="vertical"
    android:background="@color/CanEatbackground">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_gravity="top"
        android:background="@color/white">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:background="@drawable/caneaticon"
            android:contentDescription="Can Eat?">

        </ImageView>

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:background="@drawable/caneatmyinfobutton"
            android:clickable="true"
            tools:ignore="SpeakableTextPresentCheck">

        </Button>


    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:id="@+id/disease_state"
        android:layout_width="match_parent"
        android:layout_height="106dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/roundlayout"
        android:orientation="vertical">

        <Button
            android:id="@+id/disease_changebutton"
            android:layout_width="104dp"
            android:layout_height="60dp"
            android:layout_gravity="right"
            android:layout_marginTop="30dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="30dp"
            android:layout_weight="1"
            android:height="1dp"
            android:background="@drawable/register_button"
            android:text="@string/change"
            android:textColor="#000000" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/vegan_state"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/roundlayout"
        android:orientation="vertical">

        <Button
            android:id="@+id/vegan_changebutton"
            android:layout_width="104dp"
            android:layout_height="60dp"
            android:layout_gravity="right"
            android:layout_marginTop="30dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="30dp"
            android:layout_weight="1"
            android:height="1dp"
            android:background="@drawable/register_button"
            android:text="@string/change"
            android:textColor="#000000" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/allergic_state"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/roundlayout"
        android:orientation="vertical">

        <Button
            android:id="@+id/allegric_changebutton"
            android:layout_width="104dp"
            android:layout_height="60dp"
            android:layout_gravity="right"
            android:layout_marginTop="30dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="30dp"
            android:layout_weight="1"
            android:height="1dp"
            android:background="@drawable/register_button"
            android:text="@string/change"
            android:textColor="#000000" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/religion_state"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/roundlayout"
        android:orientation="vertical">

        <Button
            android:id="@+id/religion_changebutton"
            android:layout_width="104dp"
            android:layout_height="60dp"
            android:layout_gravity="right"
            android:layout_marginTop="30dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="30dp"
            android:layout_weight="1"
            android:height="1dp"
            android:background="@drawable/register_button"
            android:text="@string/change"
            android:textColor="#000000" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ingredient_state"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/roundlayout"
        android:orientation="vertical">

        <Button
            android:id="@+id/ingredient_changebutton"
            android:layout_width="104dp"
            android:layout_height="60dp"
            android:layout_gravity="right"
            android:layout_marginTop="30dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="30dp"
            android:layout_weight="1"
            android:height="1dp"
            android:background="@drawable/register_button"
            android:text="@string/change"
            android:textColor="#000000" />
    </LinearLayout>

    <Button
        android:id="@+id/picture_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/save_button"
        android:drawableTop="@android:drawable/ic_menu_camera"
        android:text="성분표 사진찍기"
        android:textColor="@color/black" />

</LinearLayout>